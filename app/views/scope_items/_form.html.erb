<%= form_with model: [@project, @scope_item], class: "bg-white rounded-lg shadow-md p-6" do |form| %>
  <% if @scope_item.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @scope_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Feature or scope item name" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Describe the feature or functionality" %>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :tshirt_size, "T-Shirt Size", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :tshirt_size, options_for_select([["S (8 hours)", "S"], ["M (24 hours)", "M"], ["L (80 hours)", "L"], ["XL (200 hours)", "XL"]], @scope_item.tshirt_size), { include_blank: "Select size..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.label :category, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :category, options_for_select(ScopeItem::CATEGORIES.map { |c| [c.titleize, c] }, @scope_item.category), { include_blank: "Select category..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-6">
    <div>
      <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :priority, options_for_select([["High", "high"], ["Medium", "medium"], ["Low", "low"]], @scope_item.priority), { include_blank: "Select priority..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, options_for_select([["Draft", "draft"], ["Approved", "approved"], ["Rejected", "rejected"]], @scope_item.status), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="flex space-x-4">
    <%= form.submit @scope_item.new_record? ? "Create Scope Item" : "Update Scope Item", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg cursor-pointer" %>
    <%= link_to "Cancel", scoping_project_path(@project), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
  </div>
<% end %>
