<%= form_with model: [@project, @assumption], class: "bg-white rounded-lg shadow-md p-6" do |form| %>
  <% if @assumption.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @assumption.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "What are you assuming?" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Additional details about this assumption" %>
  </div>

  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, options_for_select([["Open", "open"], ["Validated", "validated"], ["Invalidated", "invalidated"]], @assumption.status), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.label :scope_item_id, "Related Scope Item", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :scope_item_id, options_for_select(@project.scope_items.map { |s| [s.name, s.id] }, @assumption.scope_item_id), { include_blank: "Project-level (none)" }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :validation_notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :validation_notes, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Notes about how this was validated or why it was invalidated" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit @assumption.new_record? ? "Create Assumption" : "Update Assumption", class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded-lg cursor-pointer" %>
    <%= link_to "Cancel", scoping_project_path(@project), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
  </div>
<% end %>
