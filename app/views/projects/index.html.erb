<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-semibold text-gray-900 mb-2">
            <%= link_to project.name, project, class: "hover:text-blue-600" %>
          </h2>
          <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= project.description %></p>
          <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
            <span>Status: <span class="font-medium"><%= project.status %></span></span>
          </div>
          <div class="flex space-x-2">
            <%= link_to "View", project, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
            <%= link_to "Dashboard", dashboard_project_path(project), class: "text-green-600 hover:text-green-800 text-sm font-medium" %>
            <%= link_to "Edit", edit_project_path(project), class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
            <%= link_to "Delete", project, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-gray-600 mb-4">No projects yet. Create your first project to get started!</p>
      <%= link_to "Create Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>

