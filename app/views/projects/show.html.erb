<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @project.name %></h1>
      <p class="text-gray-600 mt-2"><%= @project.description %></p>
    </div>
    <div class="flex flex-wrap gap-2">
      <% if @project.jira_configured? %>
        <%= link_to "Jira Config", jira_config_project_path(@project), class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded-lg" %>
        <%= button_to "Sync to Jira", sync_to_jira_project_path(@project), method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg", data: { confirm: "This will export all epics and stories to Jira. Continue?" } %>
        <%= button_to "Sync from Jira", sync_from_jira_project_path(@project), method: :post, class: "bg-teal-600 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded-lg", data: { confirm: "This will import epics and stories from Jira. Continue?" } %>
      <% else %>
        <%= link_to "Setup Jira", jira_config_project_path(@project), class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <% end %>
      <%= link_to "Gantt Chart", gantt_chart_project_path(@project), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Pivot Report", pivot_report_project_path(@project), class: "bg-teal-600 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Export to Excel", export_project_path(@project, format: :xlsx), class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Dashboard", dashboard_project_path(@project), class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Edit", edit_project_path(@project), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
    </div>
  </div>

  <% if @project.jira_configured? %>
    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-6">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-lg font-semibold text-orange-900 mb-1">Jira Integration</h3>
          <p class="text-sm text-orange-800">
            Project: <strong><%= @project.jira_project_key %></strong> | 
            Site: <strong><%= @project.jira_site_url %></strong>
            <% if @project.sync_enabled? %>
              <span class="ml-2 bg-green-100 text-green-800 px-2 py-1 rounded text-xs">Auto-sync enabled</span>
            <% end %>
          </p>
        </div>
        <%= link_to "Configure", jira_config_project_path(@project), class: "text-orange-700 hover:text-orange-900 text-sm font-medium" %>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Project Summary</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div>
        <p class="text-sm text-gray-600">Total Story Points</p>
        <p class="text-2xl font-bold text-gray-900"><%= @calculator.total_story_points %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Total Hours</p>
        <p class="text-2xl font-bold text-gray-900"><%= @calculator.total_hours.round(2) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Estimated Days</p>
        <p class="text-2xl font-bold text-gray-900"><%= @calculator.estimated_days %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Estimated Weeks</p>
        <p class="text-2xl font-bold text-gray-900"><%= @calculator.estimated_weeks %></p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Teams</h2>
      <% if @project.teams.any? %>
        <ul class="space-y-2 mb-4">
          <% @project.teams.each do |team| %>
            <li class="flex justify-between items-center border-b pb-2">
              <div>
                <%= link_to team.name, team, class: "font-medium hover:text-blue-600" %>
                <span class="text-sm text-gray-500 ml-2">(<%= pluralize(team.users.count, 'member') %>)</span>
              </div>
              <%= button_to "Remove", remove_team_project_path(@project, team_id: team.id), method: :delete, class: "text-red-600 hover:text-red-800 text-sm" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-sm mb-4">No teams assigned</p>
      <% end %>
      
      <% if @available_teams.any? %>
        <%= form_with url: add_team_project_path(@project), method: :post, class: "flex gap-2" do |form| %>
          <%= form.select :team_id, @available_teams.map { |t| [t.name, t.id] }, { prompt: "Select team" }, { class: "flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
          <%= form.submit "Add Team", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
        <% end %>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Individual Team Members</h2>
      <% if @project.users.any? %>
        <ul class="space-y-2 mb-4">
          <% @project.users.each do |user| %>
            <li class="flex justify-between items-center border-b pb-2">
              <div>
                <span class="font-medium"><%= user.name %></span>
                <span class="text-sm text-gray-500 ml-2">(<%= user.primary_strength %>/<%= user.secondary_strength %>)</span>
              </div>
              <%= button_to "Remove", remove_team_member_project_path(@project, user_id: user.id), method: :delete, class: "text-red-600 hover:text-red-800 text-sm" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-sm mb-4">No individual team members assigned</p>
      <% end %>
      
      <% if @available_users.any? %>
        <%= form_with url: add_team_member_project_path(@project), method: :post, class: "flex gap-2" do |form| %>
          <%= form.select :user_id, @available_users.map { |u| [u.name, u.id] }, { prompt: "Select team member" }, { class: "flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
          <%= form.submit "Add", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Team Member Allocation</h2>
    <% allocation_data = @calculator.by_team_member %>
    <% if allocation_data.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Team Member</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Story Points</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Story Hours</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Subtask Hours</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total Hours</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">% of Project</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% allocation_data.each do |user_id, data| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-medium text-gray-900"><%= data[:user].name %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= data[:user].primary_strength %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <span class="bg-blue-100 text-blue-800 font-semibold px-2 py-1 rounded"><%= data[:story_points] %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= data[:story_hours] %>h
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= data[:subtask_hours] %>h
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-semibold text-gray-900">
                  <%= data[:total_hours] %>h
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <% percentage = @calculator.total_story_points > 0 ? (data[:story_points].to_f / @calculator.total_story_points * 100).round(1) : 0 %>
                  <div class="flex items-center justify-end">
                    <span class="mr-2"><%= percentage %>%</span>
                    <div class="w-16 bg-gray-200 rounded-full h-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td class="px-6 py-3 text-left text-sm font-semibold text-gray-900" colspan="2">Total</td>
              <td class="px-6 py-3 text-right text-sm font-semibold text-gray-900">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded"><%= allocation_data.values.sum { |d| d[:story_points] } %></span>
              </td>
              <td class="px-6 py-3 text-right text-sm font-semibold text-gray-900">
                <%= allocation_data.values.sum { |d| d[:story_hours] } %>h
              </td>
              <td class="px-6 py-3 text-right text-sm font-semibold text-gray-900">
                <%= allocation_data.values.sum { |d| d[:subtask_hours] } %>h
              </td>
              <td class="px-6 py-3 text-right text-sm font-semibold text-gray-900">
                <%= allocation_data.values.sum { |d| d[:total_hours] } %>h
              </td>
              <td class="px-6 py-3 text-right text-sm font-semibold text-gray-900">
                <% total_allocated = allocation_data.values.sum { |d| d[:story_points] } %>
                <% unallocated = @calculator.total_story_points - total_allocated %>
                <% if unallocated > 0 %>
                  <span class="text-orange-600"><%= unallocated %> pts unassigned</span>
                <% else %>
                  100%
                <% end %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-sm">No team members assigned to this project yet. Add team members above to see their allocation.</p>
    <% end %>
  </div>

  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Epics</h2>
    
    <% @epics.each do |epic| %>
      <div class="bg-white rounded-lg shadow-md p-6 mb-4">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-xl font-semibold text-gray-900">
              <%= epic.name %>
              <% if epic.jira_epic_key.present? && @project.jira_configured? %>
                <a href="<%= @project.jira_site_url %>/browse/<%= epic.jira_epic_key %>" target="_blank" class="ml-2 text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded hover:bg-blue-200" title="View in Jira">
                  ðŸ”— <%= epic.jira_epic_key %>
                </a>
                <% if epic.last_synced_at.present? %>
                  <span class="text-xs text-gray-500 ml-2" title="Last synced: <%= epic.last_synced_at.strftime('%B %d, %Y at %I:%M %p') %>">
                    (synced <%= time_ago_in_words(epic.last_synced_at) %> ago)
                  </span>
                <% end %>
              <% end %>
            </h3>
            <p class="text-gray-600 text-sm mt-1"><%= epic.description %></p>
          </div>
          <div class="flex space-x-2">
            <%= link_to "Bulk Upload", bulk_upload_project_epic_path(@project, epic), class: "bg-purple-600 hover:bg-purple-700 text-white text-sm font-bold py-1 px-3 rounded" %>
            <%= button_to "Edit", edit_project_epic_path(@project, epic), method: :get, class: "text-blue-600 hover:text-blue-800 text-sm" %>
            <%= button_to "Delete", project_epic_path(@project, epic), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
          </div>
        </div>

        <div class="ml-4">
          <div class="flex justify-between items-center mb-3">
            <h4 class="text-lg font-medium text-gray-800">Stories</h4>
            <%= button_to "Add Story", new_project_epic_story_path(@project, epic), method: :get, class: "bg-green-600 hover:bg-green-700 text-white text-sm font-bold py-1 px-3 rounded" %>
          </div>

          <% epic.stories.each do |story| %>
            <div class="bg-gray-50 rounded-lg p-4 mb-3">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <h5 class="font-semibold text-gray-900">
                      <%= story.name %>
                      <% if story.jira_issue_key.present? && @project.jira_configured? %>
                        <a href="<%= @project.jira_site_url %>/browse/<%= story.jira_issue_key %>" target="_blank" class="ml-2 text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded hover:bg-blue-200" title="View in Jira">
                          ðŸ”— <%= story.jira_issue_key %>
                        </a>
                        <% if story.last_synced_at.present? %>
                          <span class="text-xs text-gray-500 ml-1" title="Last synced: <%= story.last_synced_at.strftime('%B %d, %Y at %I:%M %p') %>">
                            (synced <%= time_ago_in_words(story.last_synced_at) %> ago)
                          </span>
                        <% end %>
                      <% end %>
                    </h5>
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded"><%= story.points %> pts</span>
                    <% if story.task_type %>
                      <span class="bg-purple-100 text-purple-800 text-xs font-semibold px-2 py-1 rounded"><%= story.task_type %></span>
                    <% end %>
                    <% if story.assigned_user %>
                      <span class="text-sm text-gray-600">Assigned to: <%= story.assigned_user.name %></span>
                    <% end %>
                  </div>
                  <p class="text-sm text-gray-600 mb-2"><%= story.description %></p>
                  
                  <div class="ml-4">
                    <div class="flex justify-between items-center mb-2">
                      <h6 class="text-sm font-medium text-gray-700">Subtasks</h6>
                      <%= button_to "Add Subtask", new_project_epic_story_subtask_path(@project, epic, story), method: :get, class: "bg-green-500 hover:bg-green-600 text-white text-xs font-bold py-1 px-2 rounded" %>
                    </div>
                    <% story.subtasks.each do |subtask| %>
                      <div class="bg-white rounded p-2 mb-2 text-sm">
                        <div class="flex justify-between items-center">
                          <div>
                            <span class="font-medium"><%= subtask.name %></span>
                            <% if subtask.task_type %>
                              <span class="bg-purple-100 text-purple-800 text-xs font-semibold px-1 py-0.5 rounded ml-2"><%= subtask.task_type %></span>
                            <% end %>
                            <% if subtask.assigned_user %>
                              <span class="text-gray-500 text-xs ml-2">â†’ <%= subtask.assigned_user.name %></span>
                            <% end %>
                            <% if subtask.estimated_hours %>
                              <span class="text-gray-500 text-xs ml-2">(<%= subtask.estimated_hours %>h)</span>
                            <% end %>
                          </div>
                          <div class="flex space-x-2">
                            <%= button_to "Edit", edit_project_epic_story_subtask_path(@project, epic, story, subtask), method: :get, class: "text-blue-600 hover:text-blue-800 text-xs" %>
                            <%= button_to "Delete", project_epic_story_subtask_path(@project, epic, story, subtask), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-xs" %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="flex space-x-2 ml-4">
                  <%= button_to "Edit", edit_project_epic_story_path(@project, epic, story), method: :get, class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  <%= button_to "Delete", project_epic_story_path(@project, epic, story), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-4">
      <%= form_with model: [@project, @project.epics.build], url: project_epics_path(@project), class: "bg-white rounded-lg shadow-md p-6" do |form| %>
        <h3 class="text-lg font-semibold mb-4">Add New Epic</h3>
        <div class="mb-4">
          <%= form.text_field :name, placeholder: "Epic name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div class="mb-4">
          <%= form.text_area :description, placeholder: "Epic description", rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <%= form.submit "Add Epic", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <% end %>
    </div>
  </div>
</div>

