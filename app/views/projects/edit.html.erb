<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Project</h1>

  <%= form_with model: @project, class: "bg-white rounded-lg shadow-md p-6" do |form| %>
    <% if @project.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <ul class="list-disc list-inside text-red-700">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.label :target_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :target_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, ["planning", "in_progress", "completed", "on_hold"], {}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <h3 class="text-lg font-semibold text-gray-900 mb-4 mt-6">Estimation Settings</h3>

    <div class="mb-4">
      <%= form.label :points_to_hours_conversion, "Points to Hours Conversion (1 point = X hours)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :points_to_hours_conversion, step: 0.1, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :pr_review_time_percentage, "PR Review Time (%)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :pr_review_time_percentage, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :product_testing_time_percentage, "Product Testing Time (%)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :product_testing_time_percentage, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= form.label :business_testing_time_percentage, "Business Testing Time (%)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :business_testing_time_percentage, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6 bg-orange-50 border border-orange-200 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-orange-900 mb-2">Jira Integration</h3>
      <% if @project.jira_configured? %>
        <p class="text-sm text-orange-800 mb-2">
          Jira is configured for this project. 
          <% if @project.jira_project_key.present? %>
            Project Key: <strong><%= @project.jira_project_key %></strong>
          <% end %>
        </p>
      <% else %>
        <p class="text-sm text-orange-800 mb-2">Jira is not configured for this project.</p>
      <% end %>
      <%= link_to "Configure Jira Integration", jira_config_project_path(@project), class: "text-orange-700 hover:text-orange-900 text-sm font-medium underline" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Update Project", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Cancel", @project, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>

