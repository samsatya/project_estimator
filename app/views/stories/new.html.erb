<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">New Story</h1>

  <%= form_with model: [@project, @epic, @epic.stories.build], url: project_epic_stories_path(@project, @epic), class: "bg-white rounded-lg shadow-md p-6" do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :points, "Story Points (Fibonacci)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :points, Story::FIBONACCI_POINTS, { prompt: "Select points" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div class="mb-4">
      <%= form.label :assigned_user_id, "Assign to Team Member", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :assigned_user_id, @project.users, :id, :name, { prompt: "Select team member (optional)" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, ["not_started", "in_progress", "completed", "blocked"], {}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div class="mb-4">
      <%= form.label :task_type, "Task Type (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :task_type, Story::TASK_TYPES, { prompt: "Select task type (optional)" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div class="mb-6">
      <%= form.label :estimated_hours, "Estimated Hours (optional, overrides points)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :estimated_hours, step: 0.5, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Create Story", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Cancel", @project, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>

