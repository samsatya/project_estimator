<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">New Time Off for <%= @user.name %></h1>

  <%= form_with model: [@user, @user.time_offs.build], url: team_member_time_offs_path(@user), class: "bg-white rounded-lg shadow-md p-6" do |form| %>
    <% if @time_off.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <ul class="list-disc list-inside text-red-700">
          <% @time_off.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :leave_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :leave_type, TimeOff::LEAVE_TYPES, { prompt: "Select leave type" }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
    </div>

    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="mb-6">
      <%= form.label :reason, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :reason, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Create Time Off", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
      <%= link_to "Cancel", team_member_time_offs_path(@user), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
</div>

