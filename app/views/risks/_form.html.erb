<%= form_with model: [@project, @risk], class: "bg-white rounded-lg shadow-md p-6" do |form| %>
  <% if @risk.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @risk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "What is the risk?" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Describe the risk in detail" %>
  </div>

  <div class="grid grid-cols-3 gap-4 mb-4">
    <div>
      <%= form.label :likelihood, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :likelihood, options_for_select([["Low", "low"], ["Medium", "medium"], ["High", "high"]], @risk.likelihood), { include_blank: "Select..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.label :impact, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :impact, options_for_select([["Low", "low"], ["Medium", "medium"], ["High", "high"]], @risk.impact), { include_blank: "Select..." }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, options_for_select([["Identified", "identified"], ["Mitigating", "mitigating"], ["Mitigated", "mitigated"], ["Accepted", "accepted"]], @risk.status), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :scope_item_id, "Related Scope Item", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :scope_item_id, options_for_select(@project.scope_items.map { |s| [s.name, s.id] }, @risk.scope_item_id), { include_blank: "Project-level (none)" }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= form.label :mitigation_plan, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :mitigation_plan, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "How will this risk be mitigated?" %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit @risk.new_record? ? "Create Risk" : "Update Risk", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg cursor-pointer" %>
    <%= link_to "Cancel", scoping_project_path(@project), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg" %>
  </div>
<% end %>
